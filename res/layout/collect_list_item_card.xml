<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?listItemBackground"	
    android:orientation="vertical" >
     
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/box_listitem_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"			
            android:textColor="?listItemExtraTextColor"
			android:padding="10dp"
			android:textSize="16sp"/>   
			
        <TextView
            android:id="@+id/listitem_card_box_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/box_listitem_card_count"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="?listItemTextColor"/>
     
    </RelativeLayout>
	
    <View
        android:id="@+id/list_item_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/light_grey"/>
	
    <TextView
        android:id="@+id/list_item_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/android_spaces_medium"
        android:paddingRight="@dimen/android_spaces_medium"
        android:paddingTop="@dimen/android_spaces"
        android:paddingBottom="@dimen/android_spaces"
        android:textColor="?listItemExtraTextColor"
        android:textSize="16sp"/>       
</LinearLayout>