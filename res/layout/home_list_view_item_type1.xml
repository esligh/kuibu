<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_1_rela_layout0_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/android_spaces_small"
        android:layout_marginLeft="@dimen/android_spaces_large"
        android:layout_marginRight="@dimen/android_spaces_large"
        android:layout_marginTop="@dimen/android_spaces_small"
        android:background="?listItemBackground"
        android:focusable="false" >

        <TextView
            android:id="@+id/home_1_topic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:textColor="@color/CornflowerBlue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_1_topic_pic_iv"
            android:layout_width="@dimen/topic_pic_width"
            android:layout_height="@dimen/topic_pic_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_1_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/android_spaces_large"
        android:layout_marginRight="@dimen/android_spaces_large"
        android:background="?listItemBackground"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="2"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="17sp"
        android:typeface="sans" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/android_spaces_large"
        android:layout_marginLeft="@dimen/android_spaces_large"
        android:layout_marginRight="@dimen/android_spaces_large"
        android:layout_marginTop="@dimen/android_spaces_small" >

        <ImageView
            android:id="@+id/home_1_item_pic_iv"
            android:layout_marginLeft="@dimen/android_spaces"
            android:layout_width="@dimen/item_pic_width"
            android:layout_height="@dimen/item_pic_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/home_1_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/home_1_item_pic_iv"
            android:background="?listItemBackground"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="2"
        	android:textColor="?android:attr/textColorSecondary"
            android:textSize="15sp" />z

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_1_content_tv"
            android:layout_marginBottom="@dimen/android_spaces"
            android:layout_marginTop="@dimen/android_spaces"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/home_1_item_time_icon_iv"
                android:layout_width="@dimen/icon_super_small_width"
                android:layout_height="@dimen/icon_super_small_height"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/home_time" />

            <TextView
                android:id="@+id/home_1_item_time_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_spaces"
                android:layout_marginRight="@dimen/android_spaces"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>