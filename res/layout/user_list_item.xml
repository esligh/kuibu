<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?listItemBackground"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/user_pic_iv"
        android:layout_width="@dimen/user_pic_width"
        android:layout_height="@dimen/user_pic_height"
        android:scaleType="fitCenter"
        android:contentDescription="@null" 
        android:layout_margin="@dimen/android_spaces"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/android_spaces">
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/user_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@id/user_name_tv" />
    </RelativeLayout>

</LinearLayout>