<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"                  
        android:clickable="true"       
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/mate_list_item_selector_light">

        <TextView
            android:id="@+id/mate_2_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"            
            android:textColor="@color/CornflowerBlue"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/mate_2_user_pic_iv"
            android:scaleType="centerInside"
            android:layout_width="@dimen/topic_pic_width"
            android:layout_height="@dimen/topic_pic_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:padding="4dp" 
            android:contentDescription="@null"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/mate_2_item_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"                 
        android:clickable="true"       
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/mate_list_item_selector_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/mate_2_pics_grid_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:horizontalSpacing="5dip"
            android:numColumns="3"
            android:padding="6dip"
            android:stretchMode="columnWidth"
            android:verticalSpacing="6dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/mate_2_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:padding="6dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/mate_2_count_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@id/mate_2_count_tv"
            android:layout_toStartOf="@id/mate_2_count_tv"
            android:contentDescription="@null" />
    </RelativeLayout>

</LinearLayout>