<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?listItemBackground"	
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hot_collect_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/android_spaces_small"
            android:paddingLeft="@dimen/android_spaces"
            android:paddingRight="@dimen/android_spaces"
            android:paddingBottom="@dimen/android_spaces_small"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/hot_collect_pic"
            android:layout_width="@dimen/icon_small_width"
            android:layout_height="@dimen/icon_small_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/android_spaces" 
            android:src="@drawable/ic_drawer_collect_normal">
        </ImageView>

        <TextView
            android:id="@+id/hot_collect_folder_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_collect_folder_name"
            android:textColor="?android:attr/textColorSecondary"
            
            android:paddingLeft="@dimen/android_spaces"
            android:paddingRight="@dimen/android_spaces"
            android:paddingBottom="@dimen/android_spaces_small"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/list_item_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/android_spaces"
        android:layout_marginRight="@dimen/android_spaces"
        android:background="@color/light_grey" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hot_collect_folder_owner_pic"
            android:layout_width="@dimen/user_pic_width"
            android:layout_height="@dimen/user_pic_height"
            android:scaleType="fitCenter"            
            android:padding="@dimen/android_spaces"
            android:contentDescription="@null">
        </ImageView>

        <TextView
            android:id="@+id/hot_collect_folder_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hot_collect_folder_owner_pic"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingTop="@dimen/android_spaces"
            android:paddingRight="@dimen/android_spaces"
            android:paddingBottom="@dimen/android_spaces"            
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/hot_collect_folder_visit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/android_spaces"
            android:textSize="16sp"
            ></TextView>
    </RelativeLayout>

</LinearLayout>