<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/android_spaces_large"
    android:gravity="center_vertical"
    android:background="@drawable/activated_background"
    >
    <!--抽屉选项-->
    <ImageView 
        android:id="@+id/item_icon"
        android:layout_marginRight="@dimen/android_spaces_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Item icon"/>
    
	<TextView 
	    android:id="@+id/item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textAppearance="?attr/attr_textAppearanceListItemSmall"
	    android:textColor="@drawable/text_color_primary_invertible"
	    android:textSize="17sp"
	    android:gravity="center_vertical"
	/>

</LinearLayout>
