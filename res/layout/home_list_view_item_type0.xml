<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_0_rela_layout0_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:background="?listItemBackground"
        android:focusable="false" >

        <TextView
            android:id="@+id/home_0_topic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:textColor="@color/CornflowerBlue"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_0_topic_pic_iv"
            android:layout_width="@dimen/topic_pic_width"
            android:layout_height="@dimen/topic_pic_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_0_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?listItemBackground"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="2"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="?listItemTextColor"
        android:typeface="sans"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/home_0_content_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?listItemBackground"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="3"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:textColor="?listItemExtraTextColor"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/home_0_item_time_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/home_time" />

        <TextView
            android:id="@+id/home_0_item_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/home_0_item_time_icon_iv"
            android:layout_toRightOf="@id/home_0_item_time_icon_iv"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>