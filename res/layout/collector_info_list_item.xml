<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/collector_pic_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/img_ooops"
        android:layout_margin="@dimen/android_spaces"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/collector_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:paddingTop="@dimen/android_spaces"
            android:paddingLeft="@dimen/android_spaces_small"/>

        <TextView
            android:id="@+id/collector_introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/android_spaces_small"
            android:paddingBottom="@dimen/android_spaces"
            android:textColor="?android:attr/textColorSecondary"/>
    </LinearLayout>
	
</LinearLayout>
