<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?listItemBackground">
    
    <TextView
        android:id="@+id/file_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"       
        android:textColor="?listItemExtraTextColor"
        android:textSize="14sp"/>

        <TextView
        android:id="@+id/pack_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/file_count_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" 
        android:textColor="?listItemTextColor"        
        android:textSize="18sp"/>
        
    <TextView
        android:id="@+id/pack_extra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?listItemExtraTextColor"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/file_count_tv"
        android:layout_below="@id/pack_name_tv"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    
</RelativeLayout>
